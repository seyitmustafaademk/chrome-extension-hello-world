{
  "manifest_version": 2,

  "name": "Wikit",
  "description": "Search Wikipedia on the go!",
  "version": "1.0",
  "icons": {
    "128": "icons/icon128.png",
    "48": "icons/icon48.png",
    "16": "icons/icon16.png"
  },

  "background": {
    "scripts": ["js/eventPage.js"],
    "persistent": false
  },

  "permissions": [
    "tabs",      
    "contextMenus"
  ]
}